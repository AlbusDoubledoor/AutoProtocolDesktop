<TabControl x:Class="AutoProtocol.EventMVVM.EventView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:AutoProtocol.Converters"
        xmlns:local="clr-namespace:AutoProtocol.EventMVVM"
        mc:Ignorable="d" Margin="5" Padding="5">
    <TabControl.Resources>
        <conv:IntToStringConverter x:Key="intToStringConverter" />
        <conv:InverseBooleanConverter x:Key="inverseBooleanConverter" />
        <conv:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
    </TabControl.Resources>
    <TabItem>
        <TabItem.Header>
            <TextBlock FontSize="16" FontWeight="Medium" Text="{DynamicResource TAB_ITEM__EVENT_CONFIGURATION}"/>
        </TabItem.Header>
        <StackPanel Margin="10">
            <Button MinHeight="30" Content="Загрузить конфигурацию" 
                    IsEnabled="{Binding IsConfigurationApplied, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource inverseBooleanConverter}}"
                    Command="{Binding ImportConfigurationCommand}"/>
            <Button MinHeight="30" Content="Выгрузить конфигурацию" Command="{Binding ExportConfigurationCommand}"/>
            <Button MinHeight="30" Content="Применить конфигурацию" 
                    IsEnabled="{Binding IsConfigurationApplied, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource inverseBooleanConverter}}"
                    Command="{Binding ApplyConfigurationCommand}"/>
            <StackPanel IsEnabled="{Binding IsConfigurationApplied, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource inverseBooleanConverter}}">
                <TextBlock Text="Имя события" Margin="0 0 5 0"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Задержка автоматической синхронизации (мин)"/>
                <TextBox Text="{Binding AutoSyncDelay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource intToStringConverter}}"/>
                <TextBlock Text="Задержка ручной синхронизации (с)" />
                <TextBox Text="{Binding ManualSyncDelay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource intToStringConverter}}"/>
                <TextBlock Text="Количество кругов" />
                <TextBox Text="{Binding LapsCount, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource intToStringConverter}}"/>
                <Grid Margin="0 7 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.75*"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="0.25*"/>
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="1" ShowsPreview="False" Width="5"
        HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="{DynamicResource ControlBackgroundBrush}" />
                    <StackPanel Grid.Column="0">
                        <TextBlock FontSize="14" Text="Участники" HorizontalAlignment="Center" FontWeight="Medium"/>
                        <StackPanel Margin="0 5 5 5">
                            <Button Command="{Binding AddParticipantCommand}" Content="Добавить участника"/>
                            <Button  Command="{Binding DeleteParticipantCommand}" Content="Удалить"/>
                            <StackPanel>
                                <TextBlock Text="Имя участника" Margin="0 0 5 0"/>
                                <TextBox Text="{Binding SelectedParticipant.Name, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </StackPanel>
                        <ListBox  ItemsSource="{Binding Participants}"
                 SelectedItem="{Binding SelectedParticipant}" Height="250" HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <TextBlock FontSize="18" Text="{Binding Path=Id, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBlock Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                    <StackPanel Grid.Column="2" >
                        <TextBlock FontSize="14" Text="Контрольные точки" HorizontalAlignment="Center" FontWeight="Medium"/>
                        <StackPanel Margin="5 5 0 5">
                            <Button Command="{Binding AddCheckPointCommand}" Content="Добавить точку"/>
                            <Button Command="{Binding DeleteCheckPointCommand}" Content="Удалить"/>
                            <StackPanel>
                                <TextBlock Text="Имя контрольной точки" Margin="0 0 5 0"/>
                                <TextBox Text="{Binding SelectedCheckPoint.Name, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </StackPanel>
                        <ListBox  ItemsSource="{Binding CheckPoints}"
                 SelectedItem="{Binding SelectedCheckPoint}" Height="250" HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <TextBlock FontSize="18" Text="{Binding Path=Id, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBlock Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
    </TabItem>
    <TabItem Visibility="{Binding IsConfigurationApplied, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource booleanToVisibilityConverter}}">
        <TabItem.Header>
            <TextBlock FontSize="16" FontWeight="Medium" Text="{DynamicResource TAB_ITEM__LOAD_DATA}"/>
        </TabItem.Header>
        <StackPanel>
            <Button MinHeight="30" Command="{Binding LoadDataCommand}">Загрузить данные</Button>
            <ListBox  Height="100" ItemsSource="{Binding FinalData}" SelectedItem="{Binding SelectedLap}" Margin="0 5 0 0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=LapIndex, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                <StackPanel DataContext="{Binding SelectedLap, UpdateSourceTrigger=PropertyChanged}">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Height="20" />
                            <ListBox  IsEnabled="false" ScrollViewer.HorizontalScrollBarVisibility="Auto" ItemsSource="{Binding Path=Participants}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Height="20" FontSize="10">
                                    <Run Text="{Binding Id}"/>
                                    <Run Text="{Binding Name}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                        <DockPanel>
                            <ListBox DockPanel.Dock="Top" ScrollViewer.HorizontalScrollBarVisibility="Auto" IsEnabled="False" ItemsSource="{Binding Path=CheckPoints}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Width="85" FontSize="10">
                                    <Run Text="{Binding Id}"/>
                                    <Run Text="{Binding Name}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <ListBox ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled"  ScrollViewer.CanContentScroll="False" ItemsSource="{Binding Path=ParticipantTimes}">

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <ListBox ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="True" ItemsSource="{Binding}">
                                            <ListBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ListBox.ItemsPanel>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBox Height="20" Width="80" FontSize="12" FontWeight="Bold" Text="{Binding StringValue, UpdateSourceTrigger=PropertyChanged}"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>

        </StackPanel>
    </TabItem>
    <TabItem Visibility="{Binding IsConfigurationApplied, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource booleanToVisibilityConverter}}">
        <TabItem.Header>
            <TextBlock FontSize="16" FontWeight="Medium" Text="{DynamicResource TAB_ITEM__EXPORT_PROTOCOL}"/>
        </TabItem.Header>
        <StackPanel>
            <Button Command="{Binding ExportProtocolCommand}">Выгрузить протокол</Button>

            <TextBox Text="{Binding HTMLTemplate}" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>
    </TabItem>
</TabControl>
